<div class="row">
<h2>
	Search Lawyer by Service
</h2>
</div>
<div class="row">
	<div class="large-12 columns">
		 <div class="large-12 columns">
		 	Select City (Location)
		 </div>
		 <div class="large-12 columns">
		 	<%= form_tag("/search_vakil/vakil_list", :method => "get") do %>
		 	  <div class="large-12 columns">
		 	   <%= hidden_field_tag "search_by_service",nil ,:value=>"search_by_service"%>
		 	   
			   <%= select_tag :service, options_from_collection_for_select(LawyerService.all.group("service_name"), "id", "service_name"),:prompt => "Select Service", :class=>"large-4 columns"%>
			  	</div>
			  	<div class="large-12 columns">
			    <%= submit_tag "Search Lawyer",:class=>"button success large"%>
			  </div>
			<% end %>
		 </div>		 
	</div>

</div>